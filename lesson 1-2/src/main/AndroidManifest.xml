<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.tinkoff.school">

    <!-- TODO добавить разрешение для доступа к External Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name="ru.tinkoff.school.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="IMAGE_PROCESSING_READY_ACTION"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- TODO зарегистрировать GalleryActivity -->
        <activity android:name=".GalleryActivity"/>

        <!-- TODO зарегистрировать сервис по обработе изображений -->
        <service android:name=".ImageProcessingService"/>


    </application>
</manifest>