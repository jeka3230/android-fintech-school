<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ru.tinkoff.cake.activity.MainActivity">

    <ImageView
        android:id="@+id/main_iv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/player_model_2" />

    <ImageView
        android:id="@+id/main_v_danger"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:rotation="-10"
        android:layout_height="wrap_content"
        android:src="@drawable/danger" />

    <TextView
        android:id="@+id/main_tv_points"
        tools:text="20000"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/main_btn_pause"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="@string/pause"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/main_btn_settings"
        android:layout_width="wrap_content"
        android:layout_gravity="right|bottom"
        android:text="@string/settings"
        android:layout_height="wrap_content" />

</FrameLayout>
